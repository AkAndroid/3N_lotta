<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linLay"
    android:layout_width="@dimen/_105sdp"
    android:layout_height="@dimen/_56sdp"
    android:orientation="vertical"
    android:background="@drawable/ticket_bg"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_24sdp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDrawName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Draw"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDrawDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get a chance win upto"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDrawAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 $"

                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTicketNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No 12345678"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>